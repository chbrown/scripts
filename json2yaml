#!/usr/bin/env node
const js_yaml = require('js-yaml')
const optimist = require('optimist')

const argparser = optimist
.usage(`Usage: json2yaml < data.json

Convert a JSON file to YAML`)
.describe({help: 'print this help message'})
.boolean(['help'])
.alias({help: 'h'})

const argv = argparser.argv

function readToEnd(stream, callback) {
  const chunks = []
  return stream
  .on('error', callback)
  .on('data', chunk => chunks.push(chunk))
  .on('end', () => callback(null, chunks))
}

function convert(stream, callback) {
  readToEnd(stream, (err, chunks) => {
    const json = Buffer.concat(chunks)
    const obj = JSON.parse(json)
    const yaml = js_yaml.dump(obj)
    console.log(yaml)
    callback()
  })
}

if (argv.help) {
  argparser.showHelp()
}
else if (process.stdin.isTTY) {
  throw new Error('JSON must be piped in on STDIN')
}
else {
  convert(process.stdin, function(err) {
    if (err) throw err
  })
}
